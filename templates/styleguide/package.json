{
  "name": "nucleum-design-system",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "scripts": {
    "design-system": "yarn uiengine build --serve --watch",
    "dev": "yarn nucleum",
    "build": "yarn nucleum build",
    "lint:css": "yarn stylelint \"src/assets/styles/**/*.scss\" -s scss",
    "lint:js": "yarn eslint \"src/assets/js/**/*.js\""
  },
  "dependencies": {
    "nucleum": "latest"
  },
  "devDependencies": {
    "@uiengine/adapter-ejs": "^3.1.7",
    "@uiengine/core": "^3.1.7",
    "connect-history-api-fallback": "^1.6.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-nucleum": "^1.0.2"
  },
  "browserslist": [
    ">0.5%",
    "not dead",
    "ie >= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/assets/js/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/assets/style/**/*.scss": [
      "stylelint --fix",
      "prettier --write"
    ]
  }
}
